@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <b>Error!</b> @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        <b>@TempData["SuccessMessage"]</b>
    </div>
}